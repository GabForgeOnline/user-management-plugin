# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/gabforge

# JWT Configuration
# Secret key for signing JWT tokens (use at least 32 characters)
JWT_SECRET_KEY=your_super_secret_key_here_min_32_characters_change_this_in_production
# JWT Algorithm (HS256, HS512, RS256, etc.)
JWT_ALGORITHM=HS256
# Access token expiration in hours
JWT_EXPIRATION_HOURS=1
# Refresh token expiration in days
JWT_REFRESH_EXPIRATION_DAYS=7

# Password Hashing Configuration
# bcrypt cost factor (higher = slower but more secure, recommended 10-12)
BCRYPT_COST=12

# Email Configuration (for password reset and verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SENDER_EMAIL=noreply@gabforge.local
SMTP_TIMEOUT=10

# Redis Configuration (optional, for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Application Configuration
APP_NAME=GabForge
APP_VERSION=1.0.0
# Set to True for development, False for production
DEBUG=False
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/user_management.log

# Security Configuration
# Maximum concurrent sessions per user (0 = unlimited)
MAX_SESSIONS_PER_USER=5
# Password minimum length
PASSWORD_MIN_LENGTH=8
# Enable email verification requirement for new users
REQUIRE_EMAIL_VERIFICATION=True
# Enable two-factor authentication
ENABLE_2FA=False
